<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/questionLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.plickers.demo.plickersdemoapp.Activity.ClassDetails$PlaceholderFragment"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questionTextViewText"
        android:id="@+id/questionTextView"
        android:layout_margin="5dp" />

    <com.felipecsl.gifimageview.library.GifImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionImageView"
        android:contentDescription="@string/questionImageViewtext"
        android:layout_weight="0.25" />



</LinearLayout>
